{
  "manifest_version": 3,
  "name": "Reading time",
  "version": "0.1",
  "description": "Add an estimated reading time to articles. (Also contains some red background styling as a test of injecting CSS).",
  "icons": {
    "16" : "images/favicon-16x16.png",
    "32" : "images/favicon-32x32.png",
    "48" : "images/favicon-48x48.png",
    "128" : "images/favicon-128x128.png"
  },
  "content_scripts": [
    {
        "js": ["scripts/content.js"],
        "css":["css/main.css"],
        "matches":["<all_urls>"]
    }
  ]
}
